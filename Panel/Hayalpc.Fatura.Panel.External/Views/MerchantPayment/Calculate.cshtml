@model MerchantPaymentCalculateVM

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    @id = "modelForm",
    @class = "form-horizontal",
    role = "form",
    autocomplete = "off"
}))
{
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@tr.Get("MerchantSelection")</h3>
                </div>
                <div class="card-body">

                    <div class="form-group row">
                        @Html.LabelFor(m => m.MerchantId, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.MerchantId, Enumerable.Empty<SelectListItem>(),  new { @class = "form-control select2 loadAjax", data_controller = "/merchant",  multiple = "multiple" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-footer">
                    <a href="@RequestHelper.Referer" class="btn btn-info float-left">@tr.Get("GoBack")</a>
                    <button type="submit" class="btn btn-primary float-right">@tr.Get("Save")</button>
                </div>
            </div>
        </div>
    </div>
}
