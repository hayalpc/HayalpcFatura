@model TariffVM
@{
    var isUpdate = Model != null && Model.Id > 0;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    @id = "modelForm",
    @class = "form-horizontal",
    role = "form",
    autocomplete = "off"
}))
{
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-6">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@tr.Get("GeneralInformation")</h3>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="MerchantId" class="col-sm-4"></label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.MerchantId, Enumerable.Empty<SelectListItem>(), tr.Get("PleasePickOne"), new { @class = "form-control select2 loadAjax", data_controller = "/merchant", data_default = Model.MerchantId })

                            @Html.ValidationMessageFor(m => m.MerchantId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Name, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Name) })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Description, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Description) })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@tr.Get("CommissionSettings")</h3>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        @Html.LabelFor(m => m.TurkcellCommission, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            <input type="text" value="@Model.TurkcellCommission" name="TurkcellCommission" placeholder="@Html.DisplayNameFor(m => m.TurkcellCommission)" class="form-control decimalReverse" asp-is-invariant="true" />
                            @Html.ValidationMessageFor(m => m.TurkcellCommission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.TurkcellAggCommission, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            <input type="text" value="@Model.TurkcellAggCommission" name="TurkcellAggCommission" placeholder="@Html.DisplayNameFor(m => m.TurkcellAggCommission)" class="form-control decimalReverse" asp-is-invariant="true" />
                            @Html.ValidationMessageFor(m => m.TurkcellAggCommission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.TurkTelekomCommission, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            <input type="text" value="@Model.TurkTelekomCommission" name="TurkTelekomCommission" placeholder="@Html.DisplayNameFor(m => m.TurkTelekomCommission)" class="form-control decimalReverse" />
                            @Html.ValidationMessageFor(m => m.TurkTelekomCommission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.TurkTelekomAggCommission, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            <input type="text" value="@Model.TurkTelekomAggCommission" name="TurkTelekomAggCommission" placeholder="@Html.DisplayNameFor(m => m.TurkTelekomAggCommission)" class="form-control decimalReverse" />
                            @Html.ValidationMessageFor(m => m.TurkTelekomAggCommission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.VodafoneCommission, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            <input type="text" value="@Model.VodafoneCommission" name="VodafoneCommission" placeholder="@Html.DisplayNameFor(m => m.VodafoneCommission)" class="form-control decimalReverse" />
                            @Html.ValidationMessageFor(m => m.VodafoneCommission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.VodafoneAggCommission, null, new { @class = "col-sm-4" })
                        <div class="col-sm-8">
                            <input type="text" value="@Model.VodafoneAggCommission" name="VodafoneAggCommission" placeholder="@Html.DisplayNameFor(m => m.VodafoneAggCommission)" class="form-control decimalReverse" />
                            @Html.ValidationMessageFor(m => m.VodafoneAggCommission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-footer">
                    <a href="@RequestHelper.Referer" class="btn btn-info float-left">@tr.Get("GoBack")</a>
                    <button type="submit" class="btn btn-primary float-right">@tr.Get("Save")</button>
                </div>
            </div>
        </div>
    </div>
}
